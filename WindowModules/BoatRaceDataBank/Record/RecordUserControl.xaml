<UserControl x:Class="ApplicationSuite.WindowModules.BoatRaceDataBank.Record.RecordUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApplicationSuite.WindowModules.BoatRaceDataBank.Record"
             mc:Ignorable="d">
    <Grid Margin="8">
        <!-- RowDefinitions: 入力(上) / 操作行 / 出力(下) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 上段：ターゲット一覧（InputText を流用） -->
        <TextBox Grid.Row="0"
             Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             FontFamily="Consolas"
             Height="160" />

        <!-- 操作行：ボタン群を簡潔に -->
        <DockPanel Grid.Row="1" Margin="0,8,0,8" LastChildFill="False">
            <TextBlock Text="SourceRoot:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Width="360" Text="{Binding SourceRoot, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text=" OkDestRoot:" VerticalAlignment="Center" Margin="8,0,8,0"/>
            <TextBox Width="320" Text="{Binding OkDestRoot, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>

        <DockPanel Grid.Row="2" Margin="0,8,0,8" LastChildFill="False">
            <ListBox ItemsSource="{Binding Kv1OperationItems}"
                     SelectedItem="{Binding SelectedOperation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderThickness="0" Background="Transparent"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,0" Padding="6" CornerRadius="6"
                                Background="#FFEEEEEE" BorderBrush="#FFCCCCCC" BorderThickness="1"
                                MinWidth="84" MinHeight="28" Cursor="Hand">
                            <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox ItemsSource="{Binding Kv2OperationItems}"
                   SelectedItem="{Binding SelectedOperation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   BorderThickness="0" Background="Transparent"
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,0" Padding="6" CornerRadius="6"
                              Background="#FFEEEEEE" BorderBrush="#FFCCCCCC" BorderThickness="1"
                              MinWidth="84" MinHeight="28" Cursor="Hand">
                            <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
            <ListBox ItemsSource="{Binding Kv3OperationItems}"
                     SelectedItem="{Binding SelectedOperation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderThickness="0" Background="Transparent"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,0" Padding="6" CornerRadius="6"
                                Background="#FFEEEEEE" BorderBrush="#FFCCCCCC" BorderThickness="1"
                                MinWidth="84" MinHeight="28" Cursor="Hand">
                            <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

        <DockPanel Grid.Row="3" Margin="0,8,0,8" LastChildFill="False">
            <ListBox ItemsSource="{Binding Bv1OperationItems}"
                     SelectedItem="{Binding SelectedOperation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderThickness="0" Background="Transparent"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,0" Padding="6" CornerRadius="6"
                                Background="#FFEEEEEE" BorderBrush="#FFCCCCCC" BorderThickness="1"
                                MinWidth="84" MinHeight="28" Cursor="Hand">
                            <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox ItemsSource="{Binding Bv2OperationItems}"
                   SelectedItem="{Binding SelectedOperation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   BorderThickness="0" Background="Transparent"
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,0" Padding="6" CornerRadius="6"
                              Background="#FFEEEEEE" BorderBrush="#FFCCCCCC" BorderThickness="1"
                              MinWidth="84" MinHeight="28" Cursor="Hand">
                            <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>

        </DockPanel>

        <!-- 下段：処理結果（OutputText を流用） -->
        <TextBox Grid.Row="4"
                 Text="{Binding OutputText, Mode=TwoWay}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"/>
    </Grid>
</UserControl>
   