<UserControl x:Class="ApplicationSuite.WindowModules.BoatRaceDataBank.Extract.ExtractUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

        <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- ========== 上段：対象一覧（テキスト） ========== -->
            <DockPanel Grid.Row="0" Margin="12,12,12,8">
                <TextBlock DockPanel.Dock="Top" Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" />
                <TextBox Text="{Binding TargetsText}" IsReadOnly="True"
                     FontFamily="Consolas, 'Courier New', monospace"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="NoWrap" Margin="0,6,0,0"/>
            </DockPanel>

            <!-- ========== 中段：操作＆状態（RootPath / B-K / 操作 / 状態） ========== -->
            <Border Grid.Row="1" Margin="12,0,12,8" Padding="10"
                Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Root -->
                        <RowDefinition Height="Auto"/>
                        <!-- B/K -->
                        <RowDefinition Height="Auto"/>
                        <!-- 操作 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 状態 -->
                    </Grid.RowDefinitions>

                    <!-- RootPath -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <TextBlock Text="Root:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox Text="{Binding RootPath, UpdateSourceTrigger=PropertyChanged}" Width="520"/>
                    </StackPanel>

                    <!-- B / K （ユーザーご報告のRadioButton構成を踏襲） -->
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,6,0,0">
                        <TextBlock Text="対象:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <RadioButton Content="B" IsChecked="{Binding FilterB}" MinWidth="40" Margin="0,0,6,0"/>
                        <RadioButton Content="K" IsChecked="{Binding FilterK}" MinWidth="40"/>
                    </StackPanel>

                    <!-- 操作（OperationItems → ボタン風） -->
                    <ListBox ItemsSource="{Binding OperationItems}"
                         SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                         Grid.Row="2" Margin="0,8,0,0"
                         BorderThickness="0" Background="{x:Null}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,6,6"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,6"
                                    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                                    BorderThickness="1" CornerRadius="4">
                                    <TextBlock Text="{Binding DisplayText}" />
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- 状態（テキストのみ） -->
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,6,0,0" HorizontalAlignment="Right">
                        <TextBlock Text="状態:" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentMessage}" FontWeight="SemiBold" VerticalAlignment="Center" Margin="6,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 仕切り -->
            <Border Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />

            <!-- ========== 下段：ログ（テキスト） ========== -->
            <DockPanel Grid.Row="3" Margin="12,8,12,12">
                <TextBlock DockPanel.Dock="Top" Text="結果ログ" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <TextBox Text="{Binding LogText}" IsReadOnly="True"
                     FontFamily="Consolas, 'Courier New', monospace"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"/>
            </DockPanel>
        </Grid>
    </UserControl>

