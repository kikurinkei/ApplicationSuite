<Window
    x:Class="ApplicationSuite.WindowModules.AppShared.Base.PrimaryBaseShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ApplicationSuite.WindowModules.AppShared.Base"
    xmlns:ml="clr-namespace:ApplicationSuite.WindowModules.AppShared.Utilities.ManualLink"
    Title="PrimaryBaseShell" Height="450" Width="2000">

    <Grid>
        <!-- 行の定義：上・中・下 -->
        <Grid.RowDefinitions>
            <!-- ヘッダー -->
            <RowDefinition Height="Auto" />
            <!-- メイン -->
            <RowDefinition Height="*" />
            <!-- フッター -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 上部（ヘッダー） -->
        <Border Grid.Row="0" Background="LightGray" BorderBrush="DarkGray" BorderThickness="1" Padding="10">
            <TextBlock Text="ヘッダー" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       TextAlignment="Center"/>

        </Border>
        <!-- 追加: ManualLink（右上固定） -->
        <ml:ManualLinkUserControl
    DataContext="{Binding AVM[ManualLink]}"
    HorizontalAlignment="Right"
    VerticalAlignment="Top"
    Margin="0,4,8,0"
    />

        <!-- 中央部（左右カラム） -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- メニュー（固定幅） -->
                <ColumnDefinition Width="200" />
                <!-- コンテンツ（可変） -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 左：メニュー -->

            <ContentControl Grid.Column="0" Content="{Binding SideContentViewModel}" Background=" LightBlue" BorderBrush="DarkBlue" BorderThickness="1" Padding="10" />

            <!-- 右：コンテンツ -->
            <!--  <ContentControl Grid.Column="1"
                    Content="{Binding AVM[CurrentViewModel]}"
                    Margin="5"
                    Padding="10"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Background="WhiteSmoke" /> -->
            <!-- CompositeViewModel の CurrentContentViewModel にバインド -->

            <ContentControl Grid.Column="1" Content="{Binding CurrentContentViewModel}" />

        </Grid>

        <!-- 下部（フッター） -->
        <Border Grid.Row="2" Background="LightGray" BorderBrush="DarkGray" BorderThickness="1" Padding="10">
            <TextBlock Text="{Binding WindowUniqueId}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>