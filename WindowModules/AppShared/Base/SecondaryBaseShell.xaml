<Window
    x:Class="ApplicationSuite.WindowModules.AppShared.Base.SecondaryBaseShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ApplicationSuite.WindowModules.AppShared.Base"
    Title="SecondaryBaseShell" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
            <TextBlock Text="{Binding HeaderTitle}" 
                       Foreground="White" 
                       FontSize="20" 
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <ContentControl Grid.Row="1"
                        Content="{Binding CurrentContentViewModel}" 
                        Margin="10"/>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="5">
            <TextBlock Text="{Binding WindowUniqueId}" 
                       Foreground="LightGray" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       TextAlignment="Center"/>
                       
                       
        </Border>
    </Grid>
</Window>
