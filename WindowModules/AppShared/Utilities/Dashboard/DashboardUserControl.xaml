<UserControl x:Class="ApplicationSuite.WindowModules.AppShared.Utilities.Dashboard.DashboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApplicationSuite.WindowModules.AppShared.Utilities.Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <!--
          ListBox 構成：
            - ItemsSource: DashboardViewModel.Items
            - SelectedItem: DashboardViewModel.SelectedItem（TwoWay）
            - ItemTemplate: 当面 ElementName を表示
        -->
        <ListBox ItemsSource="{Binding Items}"
         SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
         BorderThickness="0"
         HorizontalContentAlignment="Stretch"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{Binding ElementName}" FontWeight="Bold"/>
                        <!-- 上の Style 付き TextBlock をここに置き換え -->
                        <TextBlock Grid.Row="1" Text="{Binding Description}"
                 FontSize="12" Foreground="Gray"
                 TextWrapping="Wrap" Opacity="0.85">
        <!-- 省略: 上記 Style をそのまま貼り付け -->
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>

