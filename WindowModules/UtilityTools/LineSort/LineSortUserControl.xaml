<UserControl x:Class="ApplicationSuite.WindowModules.UtilityTools.LineSort.LineSortUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 入力 -->
            <RowDefinition Height="Auto"/>
            <!-- 操作 -->
            <RowDefinition Height="*"/>
            <!-- 出力 -->
        </Grid.RowDefinitions>

        <!-- 入力 -->
        <TextBox Grid.Row="0" Height="120"
                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <!-- 操作（昇順 / 降順 / 初期化） -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding OperationItems}"
                 SelectedItem="{Binding SelectedOperation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 BorderThickness="0" Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,8,0,8">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,8,0" Padding="6" CornerRadius="6"
                            Background="#FFEEEEEE" BorderBrush="#FFCCCCCC" BorderThickness="1"
                            MinWidth="88" MinHeight="28" Cursor="Hand">
                        <TextBlock Text="{Binding DisplayText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- 出力 -->
        <TextBox Grid.Row="2"
                 Text="{Binding OutputText, Mode=TwoWay}"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</UserControl>
