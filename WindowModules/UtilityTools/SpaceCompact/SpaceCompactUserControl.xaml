<UserControl x:Class="ApplicationSuite.WindowModules.UtilityTools.SpaceCompact.SpaceCompactUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="8">
        <!-- 4行構成：入力 / （オプション行なし） / 操作ボタン / 出力 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 入力テキスト -->
        <TextBox Grid.Row="0"
                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Height="120"/>

        <!-- （本UCはオプション無し。スペーサーとして薄い区切り） -->
        <Border Grid.Row="1" Height="1" Background="#11000000" Margin="0,8,0,8"/>

        <!-- ボタン風リスト（操作 + 初期化） -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding OperationItems}"
                 SelectedItem="{Binding SelectedOperation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 BorderThickness="0"
                 Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,8,0" Padding="6" CornerRadius="6"
                            Background="#FFEEEEEE" BorderBrush="#FFCCCCCC" BorderThickness="1"
                            MinWidth="96" MinHeight="28" Cursor="Hand">
                        <Grid>
                            <TextBlock Text="{Binding DisplayText}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- 出力テキスト -->
        <TextBox Grid.Row="3" Margin="0,8,0,0"
                 Text="{Binding OutputText, Mode=TwoWay}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</UserControl>
